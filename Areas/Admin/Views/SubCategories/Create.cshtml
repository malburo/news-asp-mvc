@model NewsApplication.Models.SubCategory

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal pt-2">
        <h4> @Html.ActionLink("Category", "Index", "Categories","", new { @class = "text-decoration-none" }) - Create </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group pt-2">
            <label class="control-label col-md-2 pb-2">Category</label>
            <div class="col-md-3">
                @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group pt-2">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 pb-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group pt-2">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
}

<div class="pt-2">
    <button class="btn btn-primary">  @Html.ActionLink("Back to List", "Index", "Categories","", new { @class = "text-white text-decoration-none"})</button>
</div>
