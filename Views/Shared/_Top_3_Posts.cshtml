@foreach (var post in ViewBag.Posts)
{
  <div class="col-4 ">
    <div class="post-card">
      <a href="/post/showpost/@post.PostId">
        <img src="@post.ImageUrl" alt="">
      </a>
      <div class="post-card-body">
        @foreach (var subCategory in post.SubCategory)
        {
         <a class="category" href="/Home/DetailsCategory/@subCategory.SubCategoryId">@subCategory.Name</a>        
        }
        <a href="/post/showpost/@post.PostId" class="post-card-title">@post.Title</a>
        <div class="author">
          <img src="@post.Author.AvatarUrl" alt="" class="avatar">
          <span>@post.Author.Name</span>
        </div>
      </div>
      <div class="post-card-footer">
        <button class="view"><i class="fas fa-eye"></i><span class="view-text">@post.Views</span></button>
      </div>
    </div>
  </div>
}