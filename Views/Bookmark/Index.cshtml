@model IEnumerable<NewsApplication.Models.Bookmark>

@{
  ViewBag.Title = "Bookmark";
}
<div class="container">
  <div class="row bg-light p-4">
    <h2 style="font-weight:600">My bookmark</h2>
  </div>
  <div class="row bg-light p-4">
    @foreach (var post in Model)
    {
      <div class="col-4 ">
        <article class="post position-relative " style="height: 400px">
          <a href="/post/showpost/@post.PostId" class="w-100">
            <img src="@post.Post.ImageUrl" style="width: 100%;height: 200px; object-fit: cover" alt="cover">
          </a>
          <div class="related-post-tag pt-2">
            @foreach (var subCategory in post.Post.SubCategory.ToList())
            {
              <a class="btn btn-danger text-capitalize" href="">@subCategory.Name</a>
            }
          </div>
          <div class="related-post-title">
            <h2 class="text-dark w-100 font-weight-bold" style="font-size: 25px;">@post.Post.Title</h2>
            <p>
              <span>@post.Post.CreatedAt.ToString("dd/MM/yyyy")</span> bởi @post.Post.Author.Name
            </p>
          </div>
        </article>
      </div>
    }
  </div>
</div>

